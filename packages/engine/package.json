{
  "name": "pairing-matrix-engine",
  "version": "0.4.0",
  "description": "Main logic to create pairing matrix using github commits",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Suman Maity"
  },
  "readme": "https://github.com/sumanmaity112/pairing-matrix/blob/main/packages/engine/README.md",
  "homepage": "https://github.com/sumanmaity112/pairing-matrix/tree/main/packages/engine#pairing-matrix-engine",
