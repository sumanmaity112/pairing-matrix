{
  "name": "pairing-matrix-charts",
  "version": "0.4.0",
  "description": "Core logic to create D3 visualisation for pairing matrix",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Suman Maity"
  },
  "readme": "https://github.com/sumanmaity112/pairing-matrix/blob/main/packages/charts/README.md",
  "homepage": "https://github.com/sumanmaity112/pairing-matrix/tree/main/packages/charts#pairing-matrix-charts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sumanmaity112/pairing-matrix.git",
    "directory": "charts"
  },
  "private": false,
  "scripts": {
    "test": "jest --watchAll=false --coverage",
    "test:watch": "jest --watchAll=true"
  },
  "dependencies": {
    "d3-array": "^3.1.6",
    "d3-chord": "^3.0.1",
    "d3-interpolate": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.0.0",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.1.0"
  },
  "devDependencies": {
    "d3": "^7.4.4",
    "@babel/preset-env": "^7.18.2",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0"
  },
  "engines": {
    "node": ">=16"
  },
  "engineStrict": true,
  "keywords": [
    "pairing matrix",
    "pairing-matrix",
    "charts",
    "d3",
    "visualisation",
    "pair",
    "matrix"
  ],
  "bugs": {
    "url": "https://github.com/sumanmaity112/pairing-matrix/issues"
  },
  "jest": {
    "clearMocks": true,
    "verbose": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "<rootDir>/__tests__/data/",
      "<rootDir>/__tests__/testUtil.js"
    ],
    "moduleNameMapper": {
      "d3": "<rootDir>/node_modules/d3/dist/d3.min.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/data/",
      "<rootDir>/__tests__/testUtil.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
